<div class="background-index d-flex flex-column">
  <div data-controller="toggle">
    <div class="container mt-4 mb-4">
      <div class="row g-4">

        <!-- Character Details -->
        <div class="col-md-6">
          <div class="card-background shadow-sm border-light rounded-4">
            <div class="card-body text-center">
              <h1 class="card-title text-center text-white"><%= @character.name %></h1>
              <img class="img-fluid rounded mb-3" src="<%= @character.image_url %>" alt="<%= @character.name %>">
              <p><strong>Status:</strong> <%= @character.description %></p>
              <p><strong>Gender:</strong> <%= @character.gender %></p>
              <p><strong>Planet:</strong> <%= @character.planet %></p>
              <p><strong>Price:</strong> <%= @character.price %>â‚¬/day</p>

              <div class="d-flex justify-content-center gap-2 mt-3">
                <%= link_to "Back", characters_path, class: "btn btn-secondary" %>
                <% if user_signed_in? && current_user.owns?(@character) %>
                  <%= link_to "Edit Character", edit_character_path(@character), class: "btn btn-primary" %>
                  <%= link_to "Delete", character_path(@character),
                                class: "btn btn-danger",
                                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <!-- Booking Details -->
        <div class="col-md-6">
          <div class="card shadow-sm">
            <div class="card-body">
              <% if user_signed_in? && current_user.owns?(@character) %>
                <h3 class="card-title mb-4 text-center"><strong>Your Character's Booking Details</strong></h3>

                <!-- Past Bookings -->
                <h5 class="mb-3">Past Bookings</h5>
                <ul class="list-group mb-4">
                  <% @character.bookings.where('end_date < ?', Date.today).where.not(status: 'declined').each do |booking| %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                      <div>
                        <strong>Booking ID:</strong> <%= booking.id %><br>
                        <strong>From:</strong> <%= booking.start_date.strftime("%d %b %Y") %><br>
                        <strong>To:</strong> <%= booking.end_date.strftime("%d %b %Y") %><br>
                        <strong>Status:</strong> <span class="badge badge-primary"><%= booking.status %></span>
                      </div>
                    </li>
                  <% end %>
                </ul>

                <!-- Upcoming Bookings -->
                <h5 class="mb-3">Upcoming Bookings</h5>
                <ul class="list-group mb-4">
                  <% @character.bookings.where('end_date >= ?', Date.today).where.not(status: 'declined').each do |booking| %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                      <div>
                        <strong>Booking ID:</strong> <%= booking.id %><br>
                        <strong>From:</strong> <%= booking.start_date.strftime("%d %b %Y") %><br>
                        <strong>To:</strong> <%= booking.end_date.strftime("%d %b %Y") %><br>
                        <strong>Status:</strong> <span class="badge badge-info"><%= booking.status %></span>
                      </div>
                    </li>
                  <% end %>
                </ul>

                <!-- Declined Bookings -->
                <h5 class="mb-3">Declined Bookings</h5>
                <ul class="list-group">
                  <% @character.bookings.where(status: 'declined').each do |booking| %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                      <div>
                        <strong>Booking ID:</strong> <%= booking.id %><br>
                        <strong>From:</strong> <%= booking.start_date.strftime("%d %b %Y") %><br>
                        <strong>To:</strong> <%= booking.end_date.strftime("%d %b %Y") %><br>
                        <strong>Status:</strong> <span class="badge badge-danger"><%= booking.status %></span>
                      </div>
                    </li>
                  <% end %>
                </ul>
              <% else %>
                <!-- Booking Form -->
                <div class="text-center">
                  <button data-action="click->toggle#fire" class="btn btn-outline-primary mb-3">Book Your Sidekick...</button>
                  <div data-toggle-target="togglableElement" class="d-none">
                    <%= render "bookings/booking_form", character: @character, all_bookings: @all_bookings %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
