<div class="sign-up-background">
  <div class="container mb-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card shadow-sm">
          <div class="text-center text-white">
            <h2 class="custom-subtitle text-center">Sign Up, Bastard!</h2>
          </div>
          <div class="card-body">
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation" }) do |f| %>
              <%= f.error_notification %>
              <div class="form-inputs">
                <div class="mb-3">
                  <%= f.input :first_name, label: false, input_html: { class: 'form-control', placeholder: "First Name" } %>
                </div>
                <div class="mb-3">
                  <%= f.input :last_name, label: false, input_html: { class: 'form-control', placeholder: "Last Name" } %>
                </div>
                <div class="mb-3">
                  <%= f.input :nickname, label: false, input_html: { class: 'form-control', placeholder: "Nickname" } %>
                </div>
                <div class="mb-3">
                  <%= f.input :email, required: true, label: false, input_html: { class: 'form-control', placeholder: "Email", autocomplete: "email" } %>
                </div>
                <div class="mb-3">
                  <%= f.input :password, required: true, label: false, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { class: 'form-control', placeholder: "Password", autocomplete: "new-password" } %>
                </div>
                <div class="mb-3">
                  <%= f.input :password_confirmation, required: true, label: false, input_html: { class: 'form-control', placeholder: "Re-type your password", autocomplete: "new-password" } %>
                </div>
              </div>
              <div class="form-actions d-flex justify-content-center">
                <%= f.button :submit, "Here we go baby !", class: "btn btn-search" %>
              </div>
            <% end %>
          </div>
          <div class="card-footer text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
