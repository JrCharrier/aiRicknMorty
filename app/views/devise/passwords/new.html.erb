<div class="sign-up-background">
  <div class="container mb-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card shadow-sm">
          <div class="text-center text-white">
            <h2 class="custom-subtitle text-center">Forgot your password?</h2>
          </div>
          <div class="card-body">
            <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "needs-validation" }) do |f| %>
              <%= f.error_notification %>
              <div class="form-inputs">
                <div class="mb-3">
                  <%= f.input :email, label: false, required: true, label_html: { class: 'form-label' }, input_html: { class: 'form-control', autocomplete: "email" }, placeholder: "your email" %>
                </div>
              </div>
              <div class="form-actions d-flex justify-content-center">
                <%= f.button :submit, "Send me reset password instructions", class: "btn btn-search" %>
              </div>
            <% end %>
          </div>
          <div class="card-footer text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
